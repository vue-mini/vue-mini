{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "types": ["vitest/globals"],
    "paths": {
      "@vue-mini/core": ["./packages/core/src"]
    }
  },
  "include": [
    "packages",
    "build.ts",
    "release.ts",
    "global.d.ts",
    "vitest.setup.ts",
    "vitest.config.ts"
  ]
}
