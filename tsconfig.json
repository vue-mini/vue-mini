{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "packages/core",
    "packages/pinia",
    "global.d.ts",
    "vitest.setup.ts",
    "vitest.config.ts"
  ]
}
